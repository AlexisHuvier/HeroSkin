<UserControl x:Class="HeroSkin.Elements.SkinRenderer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeroSkin.Elements"
             xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="640">
    <Grid>
        <glWpfControl:GLWpfControl x:Name="Renderer" Render="Renderer_Render" Width="640" Height="640" RenderTransformOrigin="0.5,0.5">
            <glWpfControl:GLWpfControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </glWpfControl:GLWpfControl.RenderTransform>
        </glWpfControl:GLWpfControl>
    </Grid>
</UserControl>
