<UserControl x:Class="HeroSkin.Elements.ToolBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeroSkin.Elements"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <xctk:ColorPicker x:Name="cpB1" Grid.ColumnSpan="2" Margin="10,10,5,10" DisplayColorAndName="true" Width="50" Height="25" SelectedColorChanged="cpB1_SelectedColorChanged" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <xctk:ColorPicker x:Name="cpB2"  Grid.ColumnSpan="2" Margin="5,10,10,10" DisplayColorAndName="true" Width="50" Height="25" SelectedColorChanged="cpB2_SelectedColorChanged" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Slider x:Name="SizeSlider" Margin="2,10,10,10" Value="1" Minimum="1" Maximum="30" Width="100" Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" ValueChanged="SizeSlider_ValueChanged" />
        <Button Name="penButton" Content="Crayon" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="10,10,5,10" Grid.Row="3" VerticalAlignment="Center" Height="50" Width="50" Click="penButton_Click"/>
        <Button Name="eraserButton" Content="Gomme" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="5,10,10,10" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Height="50" Width="50" Click="eraserButton_Click"/>
        <Label Name="SizeText" Content="1" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Margin="10,10,2,10" FontSize="16" />
        <ComboBox Name="TypeSelector" Grid.Row="2" Grid.ColumnSpan="4" Width="120" Margin="10,10,10,10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <ComboBoxItem IsSelected="True">Forme Carrée</ComboBoxItem>
            <ComboBoxItem>Forme Circulaire</ComboBoxItem>
        </ComboBox>
    </Grid>
</UserControl>
