<UserControl x:Class="HeroSkin.Elements.PixelEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeroSkin.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas Name="PixelCanvas" Width="64" Height="64" RenderTransformOrigin="0.5,0.5" Loaded="PixelEditor_Loaded" MouseDown="PixelEditor_MouseDown" MouseMove="PixelEditor_MouseMove" Background="#FFB6B6B6">
        </Canvas>
    </Grid>
</UserControl>
