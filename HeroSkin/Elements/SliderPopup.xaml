<Window x:Class="HeroSkin.Elements.SliderPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeroSkin.Elements"
        mc:Ignorable="d"
        Title="TextPopup" Height="150" Width="400">
    <StackPanel VerticalAlignment="Stretch" Margin="10">
        <TextBlock x:Name="TextBox" Text="Enter Name :" Margin="0,5,0,5"/>
        <Slider x:Name="Slider" Margin="0,5,0,10" Maximum="100" Minimum="0"/>
        <Button Content="Valider" Click="OnSave" Margin="0,10,0,0" />
    </StackPanel>
</Window>
